<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:id="@+id/item_cart"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:id="@+id/image_product"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/image_product"
            android:id="@+id/name_product"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:id="@+id/price_product"
            android:layout_marginTop="8dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:id="@+id/is_available"
            android:layout_toRightOf="@+id/image_product"
            android:layout_below="@+id/name_product"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_product"
            android:layout_below="@+id/is_available"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:id="@+id/qty"
            android:text="Qty: "
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/qty"
            android:layout_below="@+id/is_available"
            android:layout_toLeftOf="@+id/button_plus"
            android:layout_marginTop="15dp"
            android:id="@+id/qty_product"
            android:textSize="13sp"
            />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/button_plus"
            android:layout_below="@+id/is_available"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/button_minus"
            android:layout_marginRight="10dp"
            android:src="@drawable/plus"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/button_minus"
            android:layout_below="@+id/is_available"
            android:layout_toLeftOf="@+id/removeFromCart"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/minus"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeFromCart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shortdes_product"
            android:textSize="15sp"
            android:text="Remove"

            />

    </RelativeLayout>

</android.support.v7.widget.CardView>