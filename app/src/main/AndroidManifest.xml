<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ognora.alterationapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.AboutActivity" />
        <activity
            android:name=".View.ProfileActivity" />
        <activity
            android:name=".View.OrderDetailActivity" />
        <activity
            android:name=".View.OrdersActivity" />
        <activity
            android:name=".View.BillActivity" />
        <activity
            android:name=".View.PickupDetailActivity" />
        <activity
            android:name=".View.AddressFormActivity" />
        <activity
            android:name=".View.SelectAddressActivity" />
        <activity
            android:name=".View.PopSignupActivity" />
        <activity
            android:name=".View.PopLoginActivity" />
        <activity android:name=".View.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.CartActivity" />
        <activity
            android:name=".View.DescriptionActivity" />
        <activity
            android:name=".View.ProductActivity"/>
        <activity android:name=".View.CategoryActivity" />
    </application>

</manifest>